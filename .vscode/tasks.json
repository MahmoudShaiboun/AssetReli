{
  "version": "2.0.0",
  "tasks": [
        {
            "label": "npm: start",
            "type": "npm",
            "script": "start",
            "isBackground": true,
            "path": "frontend/src",
            "problemMatcher": {
                "owner": "typescript",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                "regexp": "ERROR in (.*)",
                "file": 1
                },
                "background": {
                "activeOnStart": true,
                "beginsPattern": "starting dev server",
                "endsPattern": "ready in"
                }
            }
        },
        {
            "label": "terminate npm start",
            "type": "process",
            "command": "npm",
            "args": ["stop"],
            "problemMatcher": []
        }
    ]
}